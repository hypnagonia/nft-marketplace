}

.cardDescriotion {
  padding-right: 20px;
  padding-left: 20px;
  padding-top: 5px;
  width: 100%;
}

.collectionImage {
  width: 250px;
  height: 250px;
}

.cardContainer {
  border: 2px solid #E7ECF7
  border-radius: 10px;
  display: flex;
  direction: column;
  cursor: pointer;
  margin-right: 10px;
  margin-left: 10px;
  margin-bottom: 20px;
  background-color: white;
  height: 350px;
  width: 250px;
  align-items: center;
  // justify-content: center;
  overflow: hidden;

  &:hover, &.selected {
    // border-color: #47b8eb;
  }
}

.name {
  margin-top: 10px;
  text-overflow: ellipsis;
  font-weight: bold;
  overflow: hidden;
}

.plus {
  color: #E7ECF7 !important;
}