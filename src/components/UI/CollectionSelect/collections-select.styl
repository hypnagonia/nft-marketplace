.container {
  space-between;
}


.collectionImage {
  width: 50px;
  height: 50px;
}

.cardContainer {
  border: 2px solid #E7ECF7
  border-radius: 4px;
  padding: 20px;
  display: flex;
  direction: column;
  cursor: pointer;
  margin-right: 15px;
  margin-bottom: 15px;
  height: 120px;
  width: 100px;
  align-items: center;
  justify-content: center;

  &:hover, &.selected {
    border-color: #47b8eb;

    .plus {
      color: #47b8eb !important;
    }
  }
}

.name {
  margin-top: 10px;
}

.plus {
  color: #E7ECF7 !important;
}