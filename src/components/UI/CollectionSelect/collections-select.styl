.container {
  space-between;
}


.collectionImage {
  width: 50px;
  height: 50px;
}

.cardContainer {
  border: 1px solid #E7ECF7;
  border-radius: 5px;
  padding: 20px;
  display: flex;
  direction: column;
  cursor: pointer;
  margin-right: 15px;
  margin-bottom: 15px;
  height: 120px;
  width: 90px;
  align-items: center;
  justify-content: center;

  &:hover, &.selected {
    border-color: #47b8eb;
  }
}

.name {
  margin-top: 10px;
}